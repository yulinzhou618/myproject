<Page x:Class="AIVisualwfpnew.myPage.oneCameraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AIVisualwfpnew.myPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="oneCameraPage">

    <Grid Margin="20" Background="#183048" x:Name="oneCameraImage">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"> </RowDefinition>
            <RowDefinition Height="*"> </RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black" Orientation="Horizontal">
            <Button Content="绘制线条" Width="60" Margin="5"></Button>
            <Button Content="暂停绘制" Width="60" Margin="5"></Button>
            <Button Content="保存图片" Width="60" Margin="5"></Button>
            <Button Content="打印图片" Width="60" Margin="5"></Button>
        </StackPanel>
        <Canvas  Grid.Row="1" x:Name="camerabig"  ></Canvas>
    </Grid>
</Page>
